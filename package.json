{
    "name": "shophekart-backend",
    "version": "1.0.0",
    "description": "It is the backend of the web3 ecommerce platform 'Shophekart'",
    "main": ".src/server.ts",
    "scripts": {
        "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
        "build": "npx tsc",
        "dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
        "start": "cross-env NODE_ENV=production node ./dist/server.js",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "prepare": "husky",
        "migrate:dev": "cross-env MIGRATE_MODE=development node scripts/migration.js",
        "migrate:prod": "cross-env MIGRATE_MODE=production node scripts/migration.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/UmarKhan19/shophekart-backend.git"
    },
    "author": "Shophekart",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "bugs": {
        "url": "https://github.com/UmarKhan19/shophekart-backend/issues"
    },
    "homepage": "https://github.com/UmarKhan19/shophekart-backend#readme",
